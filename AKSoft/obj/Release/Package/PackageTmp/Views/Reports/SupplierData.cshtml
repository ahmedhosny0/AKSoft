@model System.Data.DataTable
@{
    ViewBag.Title = "Supplier Data";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Supplier Data</h2>
<a href="@Url.Action("SaveSupplier", "Product")">Add Supplier</a>
<table class="table table-bordered table-striped">
    <tr>
        <th>Supplier ID</th>
        <th>Arabic Name</th>
        <th>English Name</th>
        <th>Address</th>
        <th>TelePhone1</th>
        <th>TelePhone2</th>
        <th>Country</th>
        <th>Town</th>
        <th>E-Mail</th>
    </tr>

    @for (int i = 0; i < Model.Rows.Count; i++)
    {
        <tr>
            <td>@Model.Rows[i][0]</td>
            <td>@Model.Rows[i][1]</td>
            <td>@Model.Rows[i][2]</td>
            <td>@Model.Rows[i][3]</td>
            <td>@Model.Rows[i][4]</td>
            <td>@Model.Rows[i][5]</td>
            <td>@Model.Rows[i][6]</td>
            <td>@Model.Rows[i][7]</td>
            <td>@Model.Rows[i][8]</td>
        </tr>
    }
</table>


