@model System.Data.DataTable
@{
    ViewBag.Title = "Daily Purchases";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Daily Purchases</h2>
<a href="@Url.Action("SaveProduct","Product")">Add Product</a>
<table class="table table-bordered table-striped">
    <tr>
        <th>Store Name</th>
        <th>Product Name</th>
        <th>Unit Name</th>
        <th>Supplier Name</th>
        <th>Quantity</th>
        <th>Price For Unit</th>
        <th>Total Cost</th>
    </tr>

    @for (int i = 0; i < Model.Rows.Count; i++)
    {
        <tr>
            <td>@Model.Rows[i][0]</td>
            <td>@Model.Rows[i][1]</td>
            <td>@Model.Rows[i][2]</td>
            <td>@Model.Rows[i][3]</td>
            <td>@Model.Rows[i][4]</td>
            <td>@Model.Rows[i][5]</td>
            <td>@Model.Rows[i][6]</td>
        </tr>
    }
</table>


