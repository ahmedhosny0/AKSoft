@model System.Data.DataTable
@{
    ViewBag.Title = "بيانات العملاء";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>بيانات العملاء</h2>
<a href="@Url.Action("SaveCustomer", "Customer")">تعريف عميل</a>
<table class="table table-bordered table-striped">
    <tr>
        <th>كود العميل</th>
        <th>الإسم عربي</th>
        <th>الإسم انجليزي</th>
        <th>العنوان</th>
        <th>تليفون1</th>
        <th>تليفون2</th>
        <th>الدوله</th>
        <th>المدينه</th>
        <th>البريد الإلكتروني</th>
    </tr>

    @for (int i = 0; i < Model.Rows.Count; i++)
    {
        <tr>
            <td>@Model.Rows[i][0]</td>
            <td>@Model.Rows[i][1]</td>
            <td>@Model.Rows[i][2]</td>
            <td>@Model.Rows[i][3]</td>
            <td>@Model.Rows[i][4]</td>
            <td>@Model.Rows[i][5]</td>
            <td>@Model.Rows[i][6]</td>
            <td>@Model.Rows[i][7]</td>
            <td>@Model.Rows[i][8]</td>
        </tr>
    }
</table>


