@model IEnumerable<AKSoft.Models.ItemCardView>
@{
    ViewBag.Title = "كارت الصنف";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>كارت الصنف</h2>
<a href="@Url.Action("SaveProduct", "Product")">تعريف صنف</a>
@using (Html.BeginForm("ItemsState", "Reports", FormMethod.Post))
    {
    
    <span>إسم الصنف:</span> @Html.TextBox("i")
    <input type="submit" value="بحث" />
    <br />
    <br />
<table class="table table-bordered table-striped">
    <tr>
        <th>إسم الصنف</th>
        <th>مجموعة الصنف</th>
        <th>الوحده</th>
    </tr>
@foreach (var i in Model)
                {
        <tr>
            <td>@i.ItemName</td>
            <td>@i.GroupName</td>
            <td>@i.UnitName</td>
        </tr>
}
</table>
  
}

<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script type="text/javascript">
    $(function () {
        GetCustomers();
        $("#txtCustomerName").keyup(function () {
            GetCustomers();
        });
    });
   </script>
