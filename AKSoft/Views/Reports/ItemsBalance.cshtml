@model System.Data.DataTable
@{
    ViewBag.Title = "Items Balance";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Items Balance</h2>
<a href="@Url.Action("SaveInvoiceSales", "Product")">Add Invoice</a>
<table class="table table-bordered table-striped">
    <tr>
        <th>Item Name</th>
        <th>Balance</th>
        <th></th>
    </tr>

    @for (int i = 0; i < Model.Rows.Count; i++)
    {
        <tr>
            <td>@Model.Rows[i][0]</td>
            <td>@Model.Rows[i][1]</td>
            <td>
                <a href="@Url.Action("EditUnit", "Product", new { @id = @Model.Rows[i][0] })">Edit</a>
                <a href="@Url.Action("DeleteUnit", "Product", new {@id=@Model.Rows[i][0] })">Delete</a>
            </td>
        </tr>
    }
</table>


