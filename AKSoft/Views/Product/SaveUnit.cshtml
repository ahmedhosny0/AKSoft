@model AKSoft.Models.UnitCode
@{
 ViewBag.Title = "تعريف وحده";
  }
@{if (Convert.ToInt32(Session["Role"]) == 1)
{

    ViewBag.Title = "Save Unit";
}
if (Convert.ToInt32(Session["Role"]) == 4)
{
    Layout = "~/Views/Shared/_LayoutGeneral.cshtml";

}
if (Convert.ToInt32(Session["Role"]) == 5)
{
    Layout = "~/Views/Shared/_LayoutWorker.cshtml";
}
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="~/Content/styl.css" />
    <script src="~/Scripts/sweetalert.min.js"></script>@*Library for sweety message*@
    <script type="text/javascript" src="~/Scripts/main.js"> </script>
    <style>
        .Elements {
            background-color: #e5e5e5;
            list-style-type: none;
            border: ridge 1px;
            margin: 0;
            padding: 8px;
        }
                .head
        {
                background-color: #3577ff;
                            font-size:18px;
    width: 40%;
    color: white
        }
    </style>

</head>
<body> 
    <div style="direction:rtl;">
        <h1 class="head save">تعريف وحده</h1>
    </div>
    @if (TempData["Al"] != null)
    {
        <script>
            swal("تم الحفظ بنجاح", " ", "success");
        </script>
        <strong style="color:green">تم الحفظ بنجاح  </strong>@TempData["Al"]
    }

            @using (Html.BeginForm("SaveUnit", "Product", FormMethod.Post))
    {
                @Html.AntiForgeryToken()

    <ul class="Elements">
        <li class="">
            <label class="Lab">الكود</label>
            @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "Txt drop", @placeholder = "" } })
        </li>
        <li class="">
            <label class="Lab">الإسم</label>
            @Html.EditorFor(model => model.ArabicName, new { htmlAttributes = new { @class = "Txt", @placeholder = "ArabicName", @required = "required" } }) @*Required TextBox*@
        </li>
        <li class="">
            <label class="Lab">ملاحظات</label>
            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "Txt", @placeholder = "Description" } })
        </li>

        <li class="">
            <button class="save">حفظ</button>
            <a href="@Url.Action("Displayunits", "Product" )"><input style="background-color:#0bf765" class="save" value="عرض الكل" /></a>
        </li>
    </ul>
    }


</body>
</html>




