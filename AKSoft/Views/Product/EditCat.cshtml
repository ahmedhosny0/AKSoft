@model AKSoft.Models.GroupCode
@{
    ViewBag.Title = "EditCat";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <ul class="Elements">
        <li style="display:none">
            <label class="Lab">السريال</label>
            @Html.EditorFor(model => model.Serial, new { htmlAttributes = new { @class = "Txt", @id = "name", @placeholder = "" } }) @*Required TextBox*@
        </li>
        <li>
            <label class="Lab">الكود</label>
            @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "Txt", @id = "name", @placeholder = "" } }) @*Required TextBox*@
        </li>
        <li class="">
            <label class="Lab">الإسم</label>
            @Html.EditorFor(model => model.ArabicName, new { htmlAttributes = new { @class = "Txt", @id = "name", @placeholder = "ArabicName", @required = "required" } }) @*Required TextBox*@
        </li>
        <li class="">
            <label class="Lab">ملاحظات</label>
            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "Txt", @placeholder = "Description" } })
        </li>

        <li class="">
            <button class="save">تعديل</button>
        </li>
    </ul>
}

<div>
    @Html.ActionLink("العودة للقائمة السابقة", "DisplayCategories")
    </div>

