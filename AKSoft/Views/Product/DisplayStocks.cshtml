@model System.Data.DataTable
@{if (Convert.ToInt32(Session["Role"]) == 1)
{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "بيانات المخازن";
}
if (Convert.ToInt32(Session["Role"]) == 4)
{
    ViewBag.Title = "بيانات المخازن";
    Layout = "~/Views/Shared/_LayoutGeneral.cshtml";

}
if (Convert.ToInt32(Session["Role"]) == 5)
{
    ViewBag.Title = "بيانات المخازن";
    Layout = "~/Views/Shared/_LayoutWorker.cshtml";
}
}
<script src="~/Scripts/sweetalert.min.js"></script>
@if (TempData["Al"] != null)
{
    <script>
        swal("تم الحذف!", "تم حذف الحركة بنجاح.", "success");
    </script>
    // <strong style="color:green">Saved successfully! </strong>@TempData["Al"]
}
@if (TempData["As"] != null)
{
    <script>
        swal("الحمد لله تم التعديل بنجاح", " ", "success");
    </script>
    // <strong style="color:green">Saved successfully! </strong>@TempData["Al"]
}
@if (TempData["A"] != null)
{
    <script>
        swal("عزيزي المستخدم"," هناك خطأ بسيط يرجي مراجعة الداتا أو الصلاحية", "error");
    </script>
    //<strong style="color:green">Saved successfully! </strong>@TempData["Al"]
}
<h2>المخازن المُسجلة</h2>
<a href="@Url.Action("SaveStock","Product")">تعريف مخزن</a>
<table class="table table-bordered table-striped">
    <tr>
        <th style="display:none">السريال</th>
        <th>الكود</th>
        <th>الإسم</th>
        <th>ملاحظات</th>
        <th>العنوان</th>
        <th>أمين المخزن</th>
        <th>الدولة</th>
        <th>المدينة</th>
        <th>تليفون1</th>
        <th>تليفون2</th>
        <th>تليفون3</th>
        <th>المساحة</th>
        <th></th>

    </tr>

    @for (int i = 0; i < Model.Rows.Count; i++)
    {
        <tr>
            <td style="display:none">@Model.Rows[i][0]</td>
            <td><a href="@Url.Action("EditStock", "Product", new { @id = @Model.Rows[i][0] })">@Model.Rows[i][1]</a>
            <td><a href="@Url.Action("EditStock", "Product", new { @id = @Model.Rows[i][0] })">@Model.Rows[i][2]</a>
            <td>@Model.Rows[i][3]</td>
            <td>@Model.Rows[i][4]</td>
            <td>@Model.Rows[i][5]</td>
            <td>@Model.Rows[i][6]</td>
            <td>@Model.Rows[i][7]</td>
            <td>@Model.Rows[i][8]</td>
            <td>@Model.Rows[i][9]</td>
            <td>@Model.Rows[i][10]</td>
            <td>@Model.Rows[i][11]</td>
            <td>
                <a href="@Url.Action("EditStock", "Product", new { @id = @Model.Rows[i][0] })">تعديل</a> --
                <a href="@Url.Action("DeleteStock", "Product", new {@id=@Model.Rows[i][0] })">حذف</a>
            </td>
        </tr>
    }
</table>



