@model System.Data.DataTable
@{if (Convert.ToInt32(Session["Role"]) == 1)
{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "DisplayInvoiceSales";
}
if (Convert.ToInt32(Session["Role"]) == 3)
{
    ViewBag.Title = "DisplayInvoiceSales";
    Layout = "~/Views/Shared/_LayoutEm.cshtml";

}
if (Convert.ToInt32(Session["Role"]) == 4)
{
    ViewBag.Title = "DisplayInvoiceSales";
    Layout = "~/Views/Shared/_LayoutGeneral.cshtml";

}
}

<h2>DisplayInvoiceSales</h2>
<script src="~/Scripts/sweetalert.min.js"></script>
@if (TempData["Al"] != null)
{
    <script>
        swal("Deleted!", "Item has been deleted.", "success");
    </script>
    // <strong style="color:green">Saved successfully! </strong>@TempData["Al"]
}
@if (TempData["As"] != null)
{
    <script>
        swal("Modified Successfully!", " ", "success");
    </script>
    // <strong style="color:green">Saved successfully! </strong>@TempData["Al"]
}
@if (TempData["A"] != null)
{
    <script>
        swal("Oops...", "Something went wrong!Not Allowed", "error");
    </script>
    //<strong style="color:green">Saved successfully! </strong>@TempData["Al"]
}
<a href="@Url.Action("SaveInvoiceSales","Product")">Add Invoice Sales</a>
<table class="table table-bordered table-striped">
    <tr>
        <th style="display:none">السريال</th>
        <th>كود الحركة</th>
        <th>الصنف</th>
        <th>المخزن</th>
        <th>الوحده</th>
        <th>العميل</th>
        <th>الكميه</th>
        <th>سعر الوحده</th>
        <th>الإجمالي</th>

    </tr>
    @for (int i = 0; i < Model.Rows.Count; i++)
    {
        <tr>
            <td style="display:none">@Model.Rows[i][0]</td>
            <td><a href="@Url.Action("EditInvoiceSales", "Product", new { @id = @Model.Rows[i][0] })">@Model.Rows[i][1]</a>
</td>
            <td>@Model.Rows[i][2]</td>
            <td>@Model.Rows[i][3]</td>
            <td>@Model.Rows[i][4]</td>
            <td>
                <a class="LinkItem" href="@Url.Action("EditInvoiceSales", "Product", new { @id = @Model.Rows[i][0] })">@Model.Rows[i][5]</a>
            </td>            
            <td>@Model.Rows[i][6]</td>
            <td>@Model.Rows[i][7]</td>
            <td>@Model.Rows[i][8]</td>

            <td>
                <a href="@Url.Action("EditInvoiceSales", "Product", new { @id = @Model.Rows[i][0] })">Edit</a>
                <a href="@Url.Action("DeleteInSales", "Product", new {@id=@Model.Rows[i][0] })">Delete</a>
            </td>
        </tr>
    }
</table>


