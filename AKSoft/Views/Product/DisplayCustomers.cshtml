@model System.Data.DataTable
@{
    ViewBag.Title = "Display Customerrs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/sweetalert.min.js"></script>
@if (TempData["Al"] != null)
{
    <script>
        swal("Deleted!", "Item has been deleted.", "success");
    </script>
    // <strong style="color:green">Saved successfully! </strong>@TempData["Al"]
}
@if (TempData["As"] != null)
{
    <script>
        swal("Modified Successfully!", " ", "success");
    </script>
    // <strong style="color:green">Saved successfully! </strong>@TempData["Al"]
}
@if (TempData["A"] != null)
{
    <script>
        swal("Oops...", "Something went wrong!Not Allowed", "error");
    </script>
    //<strong style="color:green">Saved successfully! </strong>@TempData["Al"]
}
<h2>Display Customerrs</h2>
<a href="@Url.Action("SaveCustomer","Product")">Add Customer</a>
<table class="table table-bordered table-striped">
    <tr>
        <th>ID</th>
        <th>ArabicName</th>
        <th>EnglishName</th>
        <th>DescName</th>
        <th>Description</th>
        <th>Address1</th>
        <th>Address2</th>
        <th>Tel1</th>
        <th>Tel2</th>
        <th>Tel3</th>
        <th>Country</th>
        <th>Town</th>
        <th>E-mail</th>
        <th>Website</th>

    </tr>

    @for (int i = 0; i < Model.Rows.Count; i++)
    {
        <tr>
            <td>@Model.Rows[i][0]</td>
            <td>@Model.Rows[i][1]</td>
            <td>@Model.Rows[i][2]</td>
            <td>@Model.Rows[i][3]</td>
            <td>@Model.Rows[i][4]</td>
            <td>@Model.Rows[i][5]</td>
            <td>@Model.Rows[i][6]</td>
            <td>@Model.Rows[i][7]</td>
            <td>@Model.Rows[i][8]</td>
            <td>@Model.Rows[i][9]</td>
            <td>@Model.Rows[i][10]</td>
            <td>@Model.Rows[i][11]</td>
            <td>@Model.Rows[i][12]</td>
            <td>@Model.Rows[i][13]</td>
            <td>
                <a href="@Url.Action("EditCustomer", "Product", new { @id = @Model.Rows[i][0] })">Edit</a>
                <a href="@Url.Action("DeleteCustomer", "Product", new { @id = @Model.Rows[i][0] })">Delete</a>
            </td>
        </tr>
    }
</table>


