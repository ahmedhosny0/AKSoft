@model System.Data.DataTable
@{
    ViewBag.Title = "DisplayItems";
}
@{if (Convert.ToInt32(Session["Role"]) == 1)
{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
if (Convert.ToInt32(Session["Role"]) == 4)
{
    Layout = "~/Views/Shared/_LayoutGeneral.cshtml";

}
if (Convert.ToInt32(Session["Role"]) == 5)
{
    Layout = "~/Views/Shared/_LayoutWorker.cshtml";
}
}
<script src="~/Scripts/sweetalert.min.js"></script>
@if (TempData["Al"] != null)
{
    <script>
        swal("Deleted!", "Item has been deleted.", "success");
    </script>
    // <strong style="color:green">Saved successfully! </strong>@TempData["Al"]
}
@if (TempData["As"] != null)
{
    <script>
        swal("الحمد لله تم التعديل بنجاح", " ", "success");
    </script>
    // <strong style="color:green">Saved successfully! </strong>@TempData["Al"]
}
@if (TempData["A"] != null)
{
    <script>
        swal("Oops...", "Something went wrong!Not Allowed", "error");
    </script>
    //<strong style="color:green">Saved successfully! </strong>@TempData["Al"]
}
<h2>DisplayItems</h2>
<a href="@Url.Action("SaveProduct","Product")">تعريف صنف</a>
<table class="table table-bordered table-striped">
    <tr>
        <th style="display:none">السريال</th>
        <th>الكود</th>
        <th>الإسم عربي</th>
        <th>ملاحظات/ الوصف</th>
        <th>الوحدة</th>
        <th>التصنيف</th>
    </tr>

    @for (int i = 0; i < Model.Rows.Count; i++)
    {
        <tr>
            <td style="display:none">@Model.Rows[i][0]</td>
            <td><a href="@Url.Action("EditItem", "Product", new { @id = @Model.Rows[i][0] })">@Model.Rows[i][1]</a></td>
            <td><a class="LinkItem" href="@Url.Action("EditItem", "Product", new { @id = @Model.Rows[i][0] })">@Model.Rows[i][2]</a></td>
            <td>@Model.Rows[i][3]</td>
            <td>@Model.Rows[i][4]</td>
            <td>@Model.Rows[i][5]</td>            <td>
                <a href="@Url.Action("EditItem", "Product", new { @id = @Model.Rows[i][0] })">Edit</a>
                <a href="@Url.Action("DeleteItem", "Product", new {@id=@Model.Rows[i][0] })">Delete</a>
            </td>
        </tr>
    }
</table>


